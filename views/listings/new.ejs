
<% layout("layouts/boilerplate")%><br><br>
<div class="row mt-3">
    <div class="col-8 offset-2">
<h3> Create a new element</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
        <label for="title" class="from-label">Title</label>
        <input name="listing[title]" placeholder="Add a catcy title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>
        </div><br> 
        <div> 
            <label for="description" class="from-label">Description</label>
        <textarea name="listing[description]"  class="form-control" required></textarea> 
        <div class="invalid-feedback">please enter a short description</div>
        </div><br>

        <div>
            <label for="image" class="from-label" >upload Image</label> 
          <input name="listing[image]" type="file" class="form-control" >
          required
          </div><br>

        <div class="row">
        <div class="col-md-4">
            <label for="price" class="from-label" >Price</label>
        <input name="listing[price]" placeholder="9999"  class="form-control" required>
        <div class="invalid-feedback">please enter a valid price</div>
        </div><br>
        <div class="col-md-8">
            <label for="country" class="from-label" >Country</label>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
        <div class="invalid-feedback">please enter the country name</div>
        </div> <br>
        </div>
        <div>
            <label for="location" class="from-label" >Location</label>
        <input name="listing[location]" placeholder="Kokon,Maharashtra " type="text" class="form-control" required>
        <div class="invalid-feedback">please enter the valid location </div>
        </div><br>
        <button class="btn btn-dark Add-btn mt-3">Add</button>
        <br><br>
    </form>
</div>
</div>
